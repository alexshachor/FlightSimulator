<UserControl x:Class="FlightSimulator.Views.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views"
             mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="400">
    <Grid>

        <Viewbox >
            <TabControl>
                <TabItem Header="Manual" FontSize ="15" Padding="5">
                    <local:ManualMode></local:ManualMode>
                </TabItem>
                <TabItem Header="Auto Pilot" FontSize ="15"  Padding="5">
                    <local:AutoPilotMode></local:AutoPilotMode>
                </TabItem>
            </TabControl>
        </Viewbox>
    </Grid>
</UserControl>
